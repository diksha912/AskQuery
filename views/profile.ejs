<%- include('partials/header') -%>
<div class=text-center style="font-weight: bold; font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif; font-size: 20px;">
  <i class="fa fa-user" style="font-size: 80px; padding-top:5px;"></i>
<p><%=currentUser.name%></p>
<p><%=currentUser.email%></p>
</div>
<div class="container " style="margin-top: 40px;">
  <div class="row">
    <% posts.forEach((post)=>{%>
     <div class="col-sm-6 mx-auto">
       <div class="card" style="margin-bottom: 40px; padding-left: 10px;padding-right: 10px;">
        <div class="text-right">
          <form action="/delete/<%= post.id%>?_method=DELETE" method="POST"  style="display: inline;">
           <input type="hidden" name="_method" Value="DELETE">
           <button type="submit" style=" border: none;background: none;"><i class="fa fa-trash" style="color:blue; font-size: 25px;" ></i></button>
           </form>
           <a href="/edit/<%= post.id %>" class="card-link text-right "><i class="fa fa-edit" style="color:blue;font-size: 25px"></i></a>
        </div>
       
        <div class="card-header" style=" padding:0px;padding-top:5px;background-color: white;border-style: none;display: flex;">
           <i class="fa fa-user-circle-o" style="font-size: 36px; padding-top:3px;"></i>
           <span style=" padding-left: 10px; padding-top:12px;"><h6><%= post.user.name %></h6></span>
         </div>
         <div class="card-body" style="padding:0px;padding-top:20px;padding-bottom: 10px;">
           <h5 class="card-title"><%=post.title%></h5>
           <p class="card-text"><%=post.postBody%></p>
         </div>
         <img src="<%=post.imgUrl%>" class="card-img">
         <div class="card-body" style="display: flex ;justify-content:space-around;">
          <i class='fa fa-edit' style='font-size:20px;padding-top:1px;'>
          <a href="/create/<%= post.id %>" class="card-link">Post your Answer</a></i>
          <i class='fa fa-list-alt' style='font-size:20px;padding-top:1px;'><a href="/view/<%= post.id %>">View Answers</a></i>
          <i class='fa fa-edit' style='font-size:20px;padding-top:1px;'><a href="#" class="card-link">DiscussQuery</a></i>
         </div>
       </div>
     </div>
    <%})%>
  </div>
</div>
<%- include('partials/footer') -%>
