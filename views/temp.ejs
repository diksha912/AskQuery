
<%- include('partials/header') -%> 
<section class="mt-5">
  <i class="fa fa-user-circle-o" style="font-size: 36px; padding-top:5px;"></i>
    <p><%=currentUser.name%></p>
    <p><%=currentUser.email%></p>
    <% posts.forEach((post)=>{%>
      <div class="card mx-auto mb-5" style="width:40%; box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);">
        <p value="Post"> <%= post.user.name %></p>
        <img src="<%=post.imgUrl%>" class="card-img-top" >
        <div class="card-body">
          <h5 class="card-title"><%=post.title%></h5>
          <p class="card-text"><%=post.postBody%></p>
        </div>
        <div class="text-right">
            <form action="/delete/<%= post.id%>?_method=DELETE" method="POST"  style="display: inline;">
             <input type="hidden" name="_method" Value="DELETE">
             <button type="submit" style=" border: none;background: none;"><i class="fa fa-trash" style="color:blue;" ></i></button>
             </form>
             <a href="/edit/<%= post.id %>" class="card-link text-right "><i class="fa fa-edit" style="color:blue;"></i></a>
          </div>
      <div class="post-comments-list">
        <ul id="post-comments-<%= post._id %>">
            <% for (comment of post.comments){%>               
            <p>
               <%= comment.content %>
                <br>
                <small>
                    <%= comment.user.name %>
                </small>
            </p>    
            <%} %>
        </ul>
    </div>
    </div>
        <div>
        <%})%>
        </section>
<%- include('partials/footer')-%>
